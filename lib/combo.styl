.combo-container
  width 520px
  height 18px
  position relative
  border 1px solid #647484
  background #fff
  font-size 11px
  font-family "Arial", "Helvetica", sans-serif

  input.combo-input
    display inline
    width 474px
    padding 0px 24px 0px 0px
    height 16px
    border 0
    outline 0
    font-size 11px
    margin-left 4px

  button.combo-button
    background-image url('../images/trigger.png')
    width 18px
    height 18px
    border 0
    float right

  ul.combo-list
    z-index 1
    // floating list instead of inside box
    position absolute
    left -1px
    right -1px
    top 19px
    overflow-x hidden
    overflow-y auto
    margin 0 0 0 0
    padding 0
    margin-top: px

    li
      border-left 1px solid #ccc
      border-right 1px solid #ccc
      border-bottom 1.5px solid #ccc
      background #d6dfe5
      padding 5px 5px
      cursor default
      line-height: 1.1

      &.active
        background #bfcdd7


// STATE DEPENDENT STYLES
button.combo-button:active
  background-position: 0 -20px

ul.combo-list li.disabled
  color #afafaf

