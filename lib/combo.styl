.combo-container
  padding-right 28px
  height 18px
  position relative
  border 1px solid #647484
  font-size 11px
  font-family "Arial", "Helvetica", sans-serif

  input.combo-input
    padding 0px 24px 0px 4px
    border 0
    outline 0
    font-size 11px
    width 100%
    height 100%

  button.combo-button
    background-image url('../images/trigger.png')
    width 18px
    height 18px
    right 0px
    top 0px
    border 0
    position absolute
    height 100%

    &:disabled
      opacity 0.5

    &:focus
      outline 0

    &:active
      background-position: 0 -20px

  ul.combo-list
    z-index 1
    // floating list instead of inside box
    position absolute
    left -1px
    right -1px
    top 19px
    overflow-x hidden
    overflow-y auto
    margin 0 0 0 0
    padding 0
    border 1px solid #ccc
    background #c1c7cc

    li
      background #d6dfe5
      padding 5px 5px
      cursor default
      line-height 1.1
      margin-bottom 1px

      &.active
        background #bfcdd7

      &:last-child
        margin-bottom 0px


// STATE DEPENDENT STYLES
button.combo-buttonactive
  background-position 0 -20px

ul.combo-list li.disabled
  color #afafaf

