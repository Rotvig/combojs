{
  "name": "combojs",
  "version": "v0.1.30",
  "description": "A combobox for intelligent, responsive search and filtering.",
  "author": "Asger Hallas",
  "contributors": [
    {
      "name": "Asger Hallas",
      "email": "ahl@asgerhallas.dk"
    },
    {
      "name": "tugend",
      "email": "tugend@gmail.com"
    }
  ],
  "license": "MIT",
  "main": "lib/build/combo.js",
  "directories": {
    "lib": "lib/build",
    "tests": "tests/build",
    "tests_results": "tests/results"
  },
  "scripts": {
    "//A": "DEFAULT TARGETS",
    "pretest": "npm run clean_test & npm run watch",
    "test": "timeout 1 & npm run nightwatch",
    "start": "npm run watch & timeout 1 & start npm run testwatch",
    "//B": "CLEAN",
    "clean_test": "title clean_test & del .\\tests\\results /Q /S& del .\\tests\\build /Q /S",
    "clean_lib": "title clean_lib & del .\\lib\\build /Q /S",
    "clean": "npm run clean_test& npm run clean_lib",
    "//C": "COMPILE STYLUS AND COFFEE FILES",
    "stylus_lib": "title stylus& stylus -w -o lib/build lib/combo.styl",
    "coffee_lib": "title coffee_lib & coffee -o lib/build -cw lib/",
    "coffee_tests": "title coffee_tests & coffee -o tests/build -cw tests/",
    "//D": "COMPILE ALL AND START WATCH COMMANDS IN NEW WINDOWS",
    "watch": "npm run clean_lib& start npm run stylus_lib& start npm run coffee_lib& start npm run coffee_tests",
    "//E": "NIGHTWATCH TARGETS",
    "//F": "RUN NIGHTWATCH WITH HIDDEN CHROME BROWSER, FOR LOCAL TDD DEVELOPMENT ONLY",
    "nightwatch_dev": "title nightwatch_dev & nightwatch --config ./tests/nightwatch.json -s regression_fails",
    "nightwatch_ie": "title nightwatch_ie & nightwatch --config ./tests/nightwatch.json -e ie",
    "nightwatch_chrome": "title nightwatch_chrome & nightwatch --config ./tests/nightwatch.json -e chrome",
    "nightwatch_firefox": "title nightwatch_firefox & nightwatch --config ./tests/nightwatch.json -e firefox",
    "nightwatch": "title nightwatch & nightwatch --config ./tests/nightwatch.json -e chrome& nightwatch --config ./tests/nightwatch.json -e ie& nightwatch --config ./tests/nightwatch.json -e firefox",
    "testwatch": "watch \"npm run nightwatch_dev\" ./tests/build/ --wait=10"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/asgerhallas/combojs"
  },
  "keywords": [
    "searchbox",
    "combobox",
    "reponsive",
    "filter"
  ],
  "bugs": {
    "url": "https://github.com/asgerhallas/combojs/issues"
  },
  "homepage": "https://github.com/asgerhallas/combojs",
  "dependencies": {
    "jquery": "^2.1.3",
    "underscore": "^1.7.0"
  },
  "devDependencies": {
    "coffee-script": "^1.8.0",
    "nightwatch": "^0.5.36",
    "stylus": "^0.49.3",
    "watch": "^0.13.0"
  }
}
